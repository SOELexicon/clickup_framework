#!/usr/bin/env python3
"""
ClickUp Framework CLI - Standalone script

This script provides a convenient entry point to the ClickUp Framework CLI.

Usage:
    ./clickup hierarchy <list_id>
    ./clickup container <list_id>
    ./clickup detail <task_id> <list_id>
    ./clickup filter <list_id> --status "in progress"
    ./clickup demo --mode hierarchy
"""

import sys
import os

# Add the current directory to Python path
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

from clickup_framework.cli import main

if __name__ == '__main__':
    main()
