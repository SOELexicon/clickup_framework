{
  "plugin_id": "export_format",
  "name": "Export Format",
  "version": "1.0.0",
  "description": "Plugin for exporting tasks in various formats including CSV, Markdown, and HTML",
  "entry_point": "export_plugin.py:ExportFormatPlugin",
  "author": {
    "name": "ClickUp JSON Manager Team",
    "email": "support@clickupjsonmanager.example.com"
  },
  "requires": {
    "core_version": ">=1.0.0",
    "plugins": []
  },
  "configuration": {
    "default_format": {
      "description": "Default export format when none is specified",
      "type": "string",
      "enum": ["csv", "markdown", "html", "xlsx", "pdf"],
      "default": "csv"
    },
    "include_fields": {
      "description": "Fields to include in exports by default",
      "type": "array",
      "default": ["id", "name", "status", "priority", "description", "tags", "created_date", "due_date"]
    },
    "export_directory": {
      "description": "Directory to save exports to",
      "type": "string",
      "default": "./exports"
    },
    "csv_options": {
      "description": "Options for CSV exports",
      "type": "object",
      "default": {
        "delimiter": ",",
        "quote_char": "\"",
        "include_header": true
      }
    },
    "markdown_options": {
      "description": "Options for Markdown exports",
      "type": "object",
      "default": {
        "include_metadata": true,
        "table_format": true
      }
    }
  },
  "capabilities": ["export", "file_generation"],
  "hooks": [],
  "commands": ["export"]
} 